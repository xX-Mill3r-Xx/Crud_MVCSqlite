@model CrudMVC_SQLite.Models.Aviao

@{
    ViewData["Title"] = "NovoAviao";
}

<h1>Novo Cadastro</h1>

<h4>Aviao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoAviao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadePassageiros" class="control-label"></label>
                <input asp-for="QuantidadePassageiros" class="form-control" />
                <span asp-validation-for="QuantidadePassageiros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
